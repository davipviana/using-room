<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="5dp">

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/student_form_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/student_form_name"
                android:inputType="textCapWords" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        <EditText
                android:id="@+id/student_form_birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/student_form_birth_date"
                android:inputType="date" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/student_form_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/student_form_email"
                android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>


    <Button
            android:id="@+id/student_form_add"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/colorBtnGreen"
            android:text="@string/student_form_add"
            android:textColor="@color/colorWhite" />


</LinearLayout>